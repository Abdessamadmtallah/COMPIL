start: item*

item: decl | stmt

decl: "int" var_list ";"

var_list: CNAME ("," CNAME)*

stmt: assign
    | print_stmt

assign: CNAME "=" expr ";"

print_stmt: "print" "(" expr ")" ";"

expr: term ((ADDOP) term)*

term: factor ((MULOP) factor)*

factor: atom

atom: "(" expr ")"
    | CNAME
    | NUMBER
    | STRING

ADDOP: "+" | "-"
MULOP: "*" | "/"

COMMENT: "/*" /([^*]|\\*(?!/))*/ "*/"

%import common.CNAME
%import common.NUMBER
%import common.WS
%import common.ESCAPED_STRING -> STRING

%ignore COMMENT
%ignore WS